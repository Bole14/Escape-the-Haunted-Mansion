import random

def intro():
    print("ğŸšï¸ Welcome to 'Escape the Haunted Mansion'!")
    print("You awaken in a dark, eerie room. You must find the main door and escape alive.")
    print("Explore rooms, collect keys, and avoid ghosts. You have 3 keys to find.\n")

def choose_direction():
    print("\nYou see four doors:")
    print("1. North ğŸšª")
    print("2. South ğŸšª")
    print("3. East ğŸšª")
    print("4. West ğŸšª")
    choice = input("Choose a direction (1â€“4): ")
    return choice

def encounter():
    event = random.choice(["ghost", "key", "trap", "nothing"])
    return event

def ghost_encounter(health):
    print("\nğŸ‘» A ghost appears!")
    print("1. Fight with courage ğŸ’ª")
    print("2. Run away ğŸƒâ€â™‚ï¸")
    choice = input("What will you do? (1 or 2): ")
    if choice == "1":
        outcome = random.choice(["win", "lose"])
        if outcome == "win":
            print("You defeated the ghost! But it drained some of your energy.")
            health -= 10
        else:
            print("The ghost attacked you! -20 health ğŸ’”")
            health -= 20
    else:
        print("You ran away safely but lost 5 health from panic. ğŸ’¨")
        health -= 5
    return health

def explore():
    health = 100
    keys = 0
    rooms_visited = 0

    while health > 0 and keys < 3:
        rooms_visited += 1
        print(f"\nğŸ° Room {rooms_visited}")
        print(f"Health: {health} | Keys: {keys}/3")

        choice = choose_direction()
        event = encounter()

        if event == "ghost":
            health = ghost_encounter(health)

        elif event == "key":
            print("ğŸ”‘ You found a mysterious key!")
            keys += 1

        elif event == "trap":
            print("ğŸ’€ You stepped on a hidden trap! -15 health")
            health -= 15

        else:
            print("ğŸ˜¶ The room is silent... nothing happens.")

    if health <= 0:
        print("\nâ˜ ï¸ You fainted in the mansion... the ghosts claim your soul forever.")
    elif keys >= 3:
        print("\nğŸ‰ You found all 3 keys and unlocked the main door!")
        print("ğŸ† Congratulations! You escaped the Haunted Mansion alive!")

def play_game():
    intro()
    while True:
        explore()
        again = input("\nDo you want to play again? (y/n): ").lower()
        if again != "y":
            print("ğŸ‘‹ Thanks for playing 'Escape the Haunted Mansion'! Goodbye, survivor.")
            break

play_game()
